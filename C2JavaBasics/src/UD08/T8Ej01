//Atributos de la clase Persona en private

public class Persona{

    private String nombre; //Aca declaro las variables
    private int DNI;
    private int edad;
    private char sexo;
    private double peso;
    private double altura;

    //Constantes para el sexo por defecto
    public static final char HOMBRE = 'H';

// **Constructor por defecto**

public Persona() {
    this.nombre = ""; //aca inicializo las variables
    this.DNI = 0;
    this.edad = 0; //0 Porque es entero
    this.sexo = HOMBRE; //HOMBRE es una constante que se define en la clase
    this.peso = 0.0;
    this.altura = 0.0; //0.0 Porque es decimal
}

//**Constructor con nombre, edad y sexo**
public Persona(String nombre, int edad, char sexo){
    this.nombre = nombre;// Inicializa el atributo 'nombre' con el valor recibido
    this.DNI = 0; // Inicializa el atributo 'DNI' con 0 (POR DEFECTO)
    this.edad = edad;
    this.sexo = sexo; // Inicializa el atributo 'sexo' con el valor recibido
    this.peso = 0.0; // Peso inicializado en 0.0 (por defecto)
    this.altura = 0.0; // Altura inicializada en 0.0 (por defecto)
}

// Constructor de la clase Persona con parámetros y inicialización de variables

public Persona(String nombre, int DNI, int edad, char sexo, double peso, double altura){
    this.nombre = nombre;//Aca defino las variables
    this.DNI = DNI; //Definimos con su mismo nombre para que no haya confusiones
    this.edad = edad;
    this.sexo = sexo;
    this.peso = peso;
    this.altura = altura;
   } 
}